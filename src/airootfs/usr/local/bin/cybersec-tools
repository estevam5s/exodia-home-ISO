#!/usr/bin/env bash

#####################################
#                                   #
#  @author      : CyberForge Team   #
#  @description : Security Tools    #
#  Copyright   : CyberForge OS      #
#                                   #
#####################################

# Colors
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
BLUE='\033[0;34m'
PURPLE='\033[0;35m'
CYAN='\033[0;36m'
WHITE='\033[1;37m'
NC='\033[0m' # No Color

echo -e "${RED}"
echo "  ▄████▄▓██   ██▓ ▄▄▄▄   ▓█████  ██▀███    █████▒▒█████   ██▀███    ▄████ ▓█████ "
echo " ▒██▀ ▀█ ▒██  ██▒▓█████▄ ▓█   ▀ ▓██ ▒ ██▒▓██   ▒▒██▒  ██▒▓██ ▒ ██▒ ██▒ ▀█▒▓█   ▀ "
echo " ▒▓█    ▄ ▒██ ██░▒██▒ ▄██▒███   ▓██ ░▄█ ▒▒████ ░▒██░  ██▒▓██ ░▄█ ▒▒██░▄▄▄░▒███   "
echo " ▒▓▓▄ ▄██▒░ ▐██▓░▒██░█▀  ▒▓█  ▄ ▒██▀▀█▄  ░▓█▒  ░▒██   ██░▒██▀▀█▄  ░▓█  ██▓▒▓█  ▄ "
echo " ▒ ▓███▀ ░░ ██▒▓░░▓█  ▀█▓░▒████▒░██▓ ▒██▒░▒█░   ░ ████▓▒░░██▓ ▒██▒░▒▓███▀▒░▒████▒"
echo " ░ ░▒ ▒  ░ ██▒▒▒ ░▒▓███▀▒░░ ▒░ ░░ ▒▓ ░▒▓░ ▒ ░   ░ ▒░▒░▒░ ░ ▒▓ ░▒▓░ ░▒   ▒ ░░ ▒░ ░"
echo "   ░  ▒  ▓██ ░▒░ ▒░▒   ░  ░ ░  ░  ░▒ ░ ▒░ ░       ░ ▒ ▒░   ░▒ ░ ▒░  ░   ░  ░ ░  ░"
echo " ░       ▒ ▒ ░░   ░    ░    ░     ░░   ░  ░ ░   ░ ░ ░ ▒    ░░   ░ ░ ░   ░    ░   "
echo " ░ ░     ░ ░      ░         ░  ░   ░                ░ ░     ░           ░    ░  ░"
echo -e "${NC}"

echo -e "${CYAN}═══════════════════════════════════════════════════════════════════════════${NC}"
echo -e "${WHITE}                    CyberForge Security Tools Menu${NC}"
echo -e "${CYAN}═══════════════════════════════════════════════════════════════════════════${NC}"

echo ""
echo -e "${GREEN}[1]${NC} ${YELLOW}Network Reconnaissance${NC}"
echo -e "    ${BLUE}→${NC} nmap, masscan, netdiscover, arp-scan"
echo ""
echo -e "${GREEN}[2]${NC} ${YELLOW}Web Application Testing${NC}"
echo -e "    ${BLUE}→${NC} nikto, dirb, gobuster, sqlmap, burpsuite"
echo ""
echo -e "${GREEN}[3]${NC} ${YELLOW}Wireless Security${NC}"
echo -e "    ${BLUE}→${NC} aircrack-ng, wifite, reaver, kismet"
echo ""
echo -e "${GREEN}[4]${NC} ${YELLOW}Password Attacks${NC}"
echo -e "    ${BLUE}→${NC} hashcat, john, hydra, crunch"
echo ""
echo -e "${GREEN}[5]${NC} ${YELLOW}Exploitation Frameworks${NC}"
echo -e "    ${BLUE}→${NC} metasploit, empire, cobaltstrike"
echo ""
echo -e "${GREEN}[6]${NC} ${YELLOW}Forensics & Analysis${NC}"
echo -e "    ${BLUE}→${NC} autopsy, volatility, binwalk, sleuthkit"
echo ""
echo -e "${GREEN}[7]${NC} ${YELLOW}OSINT & Information Gathering${NC}"
echo -e "    ${BLUE}→${NC} theharvester, maltego, shodan, recon-ng"
echo ""
echo -e "${GREEN}[8]${NC} ${YELLOW}Reverse Engineering${NC}"
echo -e "    ${BLUE}→${NC} radare2, ghidra, gdb, hexedit"
echo ""
echo -e "${GREEN}[9]${NC} ${YELLOW}Steganography & Cryptography${NC}"
echo -e "    ${BLUE}→${NC} steghide, hashid, openssl"
echo ""
echo -e "${GREEN}[0]${NC} ${YELLOW}All Tools List${NC}"
echo ""

read -p "$(echo -e ${CYAN}"Select category [0-9]: "${NC})" choice

case $choice in
    1)
        echo -e "${YELLOW}Network Reconnaissance Tools:${NC}"
        echo -e "${GREEN}• nmap${NC} - Network scanner"
        echo -e "${GREEN}• masscan${NC} - Fast port scanner"
        echo -e "${GREEN}• netdiscover${NC} - Network address discovering"
        echo -e "${GREEN}• arp-scan${NC} - ARP scanner"
        echo -e "${GREEN}• enum4linux${NC} - SMB enumeration"
        ;;
    2)
        echo -e "${YELLOW}Web Application Testing Tools:${NC}"
        echo -e "${GREEN}• nikto${NC} - Web vulnerability scanner"
        echo -e "${GREEN}• dirb${NC} - Directory bruteforcer"
        echo -e "${GREEN}• gobuster${NC} - Directory/file brute-forcer"
        echo -e "${GREEN}• sqlmap${NC} - SQL injection scanner"
        echo -e "${GREEN}• burpsuite${NC} - Web application security testing"
        ;;
    3)
        echo -e "${YELLOW}Wireless Security Tools:${NC}"
        echo -e "${GREEN}• aircrack-ng${NC} - Wireless WEP/WPA cracking"
        echo -e "${GREEN}• wifite${NC} - Wireless auditor"
        echo -e "${GREEN}• reaver${NC} - WPS brute force attack"
        echo -e "${GREEN}• kismet${NC} - Wireless network detector"
        ;;
    4)
        echo -e "${YELLOW}Password Attack Tools:${NC}"
        echo -e "${GREEN}• hashcat${NC} - Advanced password recovery"
        echo -e "${GREEN}• john${NC} - John the Ripper password cracker"
        echo -e "${GREEN}• hydra${NC} - Network logon cracker"
        echo -e "${GREEN}• crunch${NC} - Wordlist generator"
        ;;
    5)
        echo -e "${YELLOW}Exploitation Frameworks:${NC}"
        echo -e "${GREEN}• metasploit${NC} - Penetration testing framework"
        echo -e "${GREEN}• empire${NC} - PowerShell post-exploitation"
        echo -e "${GREEN}• cobaltstrike${NC} - Adversary simulation"
        ;;
    6)
        echo -e "${YELLOW}Forensics & Analysis Tools:${NC}"
        echo -e "${GREEN}• autopsy${NC} - Digital forensics platform"
        echo -e "${GREEN}• volatility${NC} - Memory forensics"
        echo -e "${GREEN}• binwalk${NC} - Firmware analysis"
        echo -e "${GREEN}• sleuthkit${NC} - File system forensics"
        ;;
    7)
        echo -e "${YELLOW}OSINT & Information Gathering:${NC}"
        echo -e "${GREEN}• theharvester${NC} - Email/subdomain harvester"
        echo -e "${GREEN}• maltego${NC} - OSINT and graphical link analysis"
        echo -e "${GREEN}• shodan${NC} - Internet-connected device search"
        echo -e "${GREEN}• recon-ng${NC} - Web reconnaissance framework"
        ;;
    8)
        echo -e "${YELLOW}Reverse Engineering Tools:${NC}"
        echo -e "${GREEN}• radare2${NC} - Reverse engineering framework"
        echo -e "${GREEN}• ghidra${NC} - Software reverse engineering"
        echo -e "${GREEN}• gdb${NC} - GNU debugger"
        echo -e "${GREEN}• hexedit${NC} - Hex editor"
        ;;
    9)
        echo -e "${YELLOW}Steganography & Cryptography:${NC}"
        echo -e "${GREEN}• steghide${NC} - Steganography tool"
        echo -e "${GREEN}• hashid${NC} - Hash identifier"
        echo -e "${GREEN}• openssl${NC} - Cryptography toolkit"
        ;;
    0)
        echo -e "${YELLOW}All available security tools installed in CyberForge OS${NC}"
        echo -e "${CYAN}═══════════════════════════════════════════════════════════════${NC}"
        which nmap masscan nikto sqlmap aircrack-ng metasploit hashcat 2>/dev/null | head -20
        ;;
    *)
        echo -e "${RED}Invalid selection!${NC}"
        ;;
esac

echo ""
echo -e "${PURPLE}Note: Run tools with appropriate permissions and only on authorized targets!${NC}"